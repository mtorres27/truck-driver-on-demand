.truckker-section.truckker-section__head
  .container
    .truckker-header
      a[href=driver_onboarding_process_index_url]
        = fa_icon 'arrow-left'
      h2.mt-3 Review Terms
      .d-flex.justify-content-end.align-items-center
        = link_to 'Save', driver_onboarding_process_index_path, class: 'btn btn-primary mt-2 mb-2'
.truckker-section.truckker-section__main
  .container.container__content
    .row.mb-4
      .col
        h3.font-weight-bold Review Employment Terms
    .row.mb-4
      .col
        = render "driver/shared/card_link", completed: @driver.accept_health_and_safety, title: "Health and Safety Handbook", url: health_and_safety_driver_employment_terms_url
        = render "driver/shared/card_link", completed: @driver.accept_wsib, title: "WSIB", url: wsib_driver_employment_terms_url
        = render "driver/shared/card_link", completed: @driver.accept_excess_hours, title: "Excess Hours", url: excess_hours_driver_employment_terms_url
        = render "driver/shared/card_link", completed: @driver.accept_terms_and_conditions, title: "Terms and Conditions", url: terms_and_conditions_driver_employment_terms_url
        = render "driver/shared/card_link", completed: false, title: "Previously Registered", url: "#"
