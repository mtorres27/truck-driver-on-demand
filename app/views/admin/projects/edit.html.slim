h1 Editing Project

= simple_form_for([:admin, @project]) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :external_project_id
    = f.input :budget
    = f.input :starts_on
    = f.input :duration
    = f.input :address
    = f.input :area
    = f.input :closed
    = f.input :currency
    
  .form-actions
    = f.button :submit, class: "btn btn-primary", prompt: "Select"

hr
= link_to 'Show', admin_project_path(@project)
'  |
= link_to 'Back', admin_projects_path

