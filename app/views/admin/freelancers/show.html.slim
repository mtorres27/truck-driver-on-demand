.avj-section.avj-section__msg-subhead.d-block.mb-4
  .container
    - if @freelancer.confirmed_at.nil? && @freelancer.confirmation_token.present?
      .avj-subhead
        div
          strong<> Confirmation Link:
          = confirmation_url(@freelancer, confirmation_token: @freelancer.confirmation_token)
    .avj-subhead
      h4.ellipsis.mb-0= @freelancer.full_name
      .d-flex.align-items-center.justify-content-end
        a.btn.btn-primary.btn-sm.mr-2 href=messaging_admin_freelancer_path(@freelancer)
          | Messages
        a.btn.btn-primary.btn-sm.mr-2 href=edit_admin_freelancer_path(@freelancer)
          | Edit
        - if @freelancer.freelancer_profile.verified?
          a.btn.btn-outline-primary.btn-sm.mr-2 href=unverify_admin_freelancer_path(@freelancer)
            | Unverify
        - else
          a.btn.btn-outline-primary.btn-sm.mr-2 href=verify_admin_freelancer_path(@freelancer)
            | Verify
= render "shared/profile-freelancer"
