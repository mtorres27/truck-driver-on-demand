- @messages.each do |message|
  .media.new-message__item
    .media-left
      .freelancer_avatar
        = image_tag(message.authorable.avatar_url, size: "40x40")
    .media-body
      span class="authorable_name"
        = "#{message.authorable.name} "
      span class="authorable_date"
        = "#{time_ago_in_words(message.created_at)} ago"
      .authorable_body
        - if message.send_contract != true
          - if !message.checkin
            = message.body
          - else
            span class="new-message__checkin fa fa-map-marker"
            = "Checked in at job site #{message.created_at.strftime("%B %d, %Y at %l:%M %P")}:"
            br
            = message.body
        - else
          = message.body.html_safe


        - if message.attachment
          .new-message__image
            = attachment_image_link(message.attachment)