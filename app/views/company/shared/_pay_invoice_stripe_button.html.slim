= form_tag mark_as_paid_company_job_payment_path(job, payment), method: 'post' do
  input type="hidden" name="quote_id" value=payment.id
  script.stripe-button data-label="Pay Invoice" data-amount="#{ total * 100 }" data-image="/assets/stripe-logo.png" data-email=("#{current_user.email}") data-description="Pay Invoice" data-key=("#{Rails.configuration.stripe[:publishable_key]}") data-locale="auto" src="https://checkout.stripe.com/checkout.js" data-currency="#{job.currency}" data-panel-label="Pay Invoice"