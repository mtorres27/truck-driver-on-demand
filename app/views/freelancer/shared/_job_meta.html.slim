.job-header
  .job-header__meta-1
    = job_state_label(@job)
  h5.heading-h5 = @job.created_at.strftime('%B %d, %Y')
  h2.heading-h2 = @job.title
  a href=freelancer_company_path(@job.company)
    h3.heading-h3 = @job.company.name
    .rating
      - @stars = company_avg_rating(@job.company)
      - @stars.each do |star|
        i class=star


