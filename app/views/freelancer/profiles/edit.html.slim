  function uploadCertificate (index) {
    if (index != undefined) {
      var ref = $("#freelancer_certifications_attributes_"+index+"_certificate");
    } else {
      var ref = $(".add-new-certificate").prev('div').find(".profile__meta__info").find(".file-input--hidden");
