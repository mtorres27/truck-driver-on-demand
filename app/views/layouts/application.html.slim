  body
    .wrap
      .section.section--header
        = render "shared/nav"
        = render "shared/mobile_nav"
        = render "shared/onboarding"
        = render "shared/flash"
        - if params[:controller]&.gsub("/", "-") == "company-freelancers" && params[:id]
          = yield
        - elsif params[:controller]&.gsub("/", "-") == "company-profiles"
          =yield
        - else
      .section.section--body 
        .container.container--header
          .container= yield

        - if content_for(:secondary)
          .container
            .frame= yield :secondary

      = render "shared/footer"
